<% provide(:title, "Kullanıcı güncelle") %>
<h1>Profili Güncelle</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
     <%= render 'fields', f: f %>
      <%= f.submit "Güncelle", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
       
    </div>
  </div>
</div>